<templateSet group="Shortcuts JavaScript and TypeScript">
  <template name="if" value="if ($CONDITIONS$) {&#10;  $END$&#10;}&#10;" description="if" toReformat="false" toShortenFQNames="true">
    <variable name="CONDITIONS" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JS_STATEMENT" value="true" />
    </context>
  </template>
  <template name="ecl" value="export class $NAME$ {&#10;  $END$&#10;}&#10;" description="export class" toReformat="false" toShortenFQNames="true">
    <variable name="NAME" expression="capitalize(fileNameWithoutExtension())" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JS_TOP_LEVEL_STATEMENT" value="true" />
    </context>
  </template>
  <template name="cl" value="class $NAME$ {&#10;  $END$&#10;}&#10;" description="class" toReformat="false" toShortenFQNames="true">
    <variable name="NAME" expression="capitalize(fileNameWithoutExtension())" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JS_STATEMENT" value="true" />
    </context>
  </template>
</templateSet>